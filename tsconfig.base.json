{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@nx/esbuild": [
        "node_modules/@nx/esbuild"
      ]
    },
    "importHelpers": true,
    "isolatedModules": true,
    "lib": [
      "es2022"
    ],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": [
      "@express-bk/source"
    ]
  }
}
